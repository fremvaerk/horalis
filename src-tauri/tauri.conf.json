{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Horalis",
  "version": "0.1.0",
  "identifier": "com.horalis.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Horalis",
        "width": 240,
        "height": 44,
        "decorations": false,
        "alwaysOnTop": true,
        "resizable": false,
        "visible": true,
        "skipTaskbar": true,
        "transparent": true,
        "shadow": false,
        "acceptFirstMouse": true,
        "visibleOnAllWorkspaces": true
      },
      {
        "label": "dashboard",
        "title": "Horalis",
        "url": "index.html#/dashboard",
        "width": 900,
        "height": 650,
        "minWidth": 700,
        "minHeight": 500,
        "decorations": true,
        "resizable": true,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {}
}
